@model MTC.FSP.Web.Models.MerchandiseProductSize

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this product size?</h3>
<div>
    <h4>"@Model.Size"</h4>
    <hr />
  
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a href="~/MerchandiseProductSizes/Index" class="btn btn-default">Cancel</a>
        </div>
    }
</div>
