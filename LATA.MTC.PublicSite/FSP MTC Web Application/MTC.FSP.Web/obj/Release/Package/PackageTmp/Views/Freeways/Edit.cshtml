@model MTC.FSP.Web.Models.Freeway

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>"@Model.FreewayName"</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.FreewayID)
        
        <div class="form-group">
            <label class="control-label col-md-2">Highway Name</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.FreewayName, new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(model => model.FreewayName, "Highway Name is required", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
