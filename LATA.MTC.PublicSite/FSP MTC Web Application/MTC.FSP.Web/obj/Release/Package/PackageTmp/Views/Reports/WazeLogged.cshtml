@{
    ViewBag.Title = "Waze Logged | Report";
}

<br />
<link href="~/Content/footable.core.min.css" rel="stylesheet" />
<link href="~/Content/themes/base/all.css" rel="stylesheet" />

<p>
    <a href="~/Reports/Index">Back to Reports</a>
</p>

<div ng-app="mtcApp" ng-cloak>
    <div ng-controller="reportWazeMessagesController" data-ng-init="getReportData()">
        <h3>{{header}} <i class="fa fa-spinner fa-spin" ng-show="isBusy"></i><span ng-show="records.length > 0 && !isBusy">({{records.length}})</span></h3>
        <br />
        <br />
        @*ResultsPubDate = w.PubDate,
        Type = w.Type,
        SubType = w.SubType,
        Lat = w.Lat,
        lon = w.Lon,
        Realiability = w.Reliability,
        ThumbsUp = w.nThumbsUp,
        Confidence = w.Confidence,
        Street = w.Street,
        DispatchedTo = w.DispatchedTo,
        DispatchTime = w.DispatchTime,
        AckTime = w.AckTime,
        AckMessage = w.AckMessage
            *@
        <div class="row">
            <div class="col-lg-12">
                <table class="table table-hover footable" data-page-size="10" data-limit-navigation="10">
                    <thead>
                        <tr>
                            <th>PubDate</th>
                            <th>Type</th>
                            <th>SubType</th>
                            <th>Lat</th>
                            <th>Lon</th>
                            <th>Realiability</th>
                            <th>ThumbsUp</th>
                            <th>Confidence</th>
                            <th>Street</th>
                            <th>DispatchedTo</th>
                            <th>DispatchTime</th>
                            <th>AckTime</th>
                            <th>AckMessage</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="r in records">
                            <td ng-bind="r.PubDate | datetimefilter"></td>
                            <td ng-bind="r.Type"></td>
                            <td ng-bind="r.SubType"></td>
                            <td ng-bind="r.Lat"></td>
                            <td ng-bind="r.lon"></td>
                            <td ng-bind="r.Realiability"></td>
                            <td ng-bind="r.ThumbsUp"></td>
                            <td ng-bind="r.Confidence"></td>
                            <td ng-bind="r.Street"></td>
                            <td ng-bind="r.DispatchedTo"></td>
                            <td ng-bind="r.DispatchTime | datetimefilter"></td>
                            <td ng-bind="r.AckTime | datetimefilter"></td>
                            <td ng-bind="r.AckMessage"></td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="25" class="text-center">
                                <div class="paging">
                                    <ul class="pagination pagination-sm"></ul>
                                </div>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script src="~/Scripts/footable.all.min.js"></script>

    @Scripts.Render("~/bundles/appAngular")
    <script src="~/app/controllers/reportWazeMessagesController.js"></script>
    <script src="~/app/services/reportService.js"></script>
    <script src="~/app/services/generalService.js"></script>
    <script src="~/app/directives/mtcDatePickerDirective.js"></script>
    <script>
        $(function () {
            $('.footable').footable();
        });
    </script>
}