@model MTC.FSP.Web.Models.Var

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>"@Model.VarName"</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.VarID)
        @Html.HiddenFor(model => model.VarName)

        <div class="form-group">
            <label class="control-label col-md-2">Var Name</label>
            <div class="col-md-10">
                <input type="text" class="form-control" value="@Model.VarName" disabled />                
                @Html.ValidationMessageFor(model => model.VarName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Friendly Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.FriendlyVarName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FriendlyVarName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 5 })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Value</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.VarValue, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.VarValue, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Units</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Units, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Units, "", new { @class = "text-danger" })
                <p class="help-block">
                    (e.g. "Minutes", "Hours",...)
                </p>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Is MTC Alarm?</label>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsMTCAlarm)
                    @Html.ValidationMessageFor(model => model.IsMTCAlarm, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
