@{
    ViewBag.Title = "Training Media";
}
<link href="~/Content/themes/base/all.css" rel="stylesheet" />

<h2 class="col-lg-offset-2">@ViewBag.Title</h2>

<br />

<div ng-app="mtcApp">
    <div ng-controller="trainingMediaController" ng-cloak>
        <div class="row">
            <div class="col-lg-6 col-lg-offset-2" ng-show="currentUserRoleName">
                <div role="tabpanel">
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" ng-class="{active:currentUserRoleName !== 'TowContractor'}"><a href="#Admin" aria-controls="Admin" role="tab" data-toggle="tab" ng-hide="currentUserRoleName === 'TowContractor'">Admin/FSP Partners</a></li>
                        <li role="presentation" ng-class="{currentUserRoleName === 'TowContractor'}"><a href="#Contractors" aria-controls="Contractors" role="tab" data-toggle="tab">Tow Contractors/Drivers</a></li>
                        <li role="presentation" ng-class="{currentUserRoleName !== 'Guest'}"><a href="#DropSites" aria-controls="DropSites" role="tab" data-toggle="tab">DropSites</a></li>
                    </ul>
                </div>
                <!-- Tab panes -->
