@model MTC.FSP.Web.Models.Freeway

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this highway?</h3>
<div>
    <h4>"@Model.FreewayName"</h4>
   
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a href="~/Freeways/Index" class="btn btn-default">Cancel</a>
        </div>
    }
</div>
