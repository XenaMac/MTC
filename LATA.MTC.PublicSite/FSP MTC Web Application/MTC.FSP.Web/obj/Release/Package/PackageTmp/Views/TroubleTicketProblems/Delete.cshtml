@model MTC.FSP.Web.Models.TroubleTicketProblem

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this trouble ticket problem?</h3>
<div>
    <h4>"@Model.Problem"</h4>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a href="~/TroubleTicketProblems/Index" class="btn btn-default">Cancel</a>
        </div>
    }
</div>
