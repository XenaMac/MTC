@model MTC.FSP.Web.Models.Freeway

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>New Highway</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Highway ID</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.FreewayID, new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(model => model.FreewayID, "Highway ID is required", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Highway Name</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.FreewayName, new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(model => model.FreewayName, "Highway Name is required", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
