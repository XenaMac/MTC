@model IEnumerable<MTC.FSP.Web.Models.Freeway>

@{
    ViewBag.Title = "Highways";
}

<h2>Highways</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            Highway ID
        </th>
        <th>
            Highway Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FreewayID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FreewayName)
        </td>
        <td>
            <div class="pull-right">
                @Html.ActionLink("Edit", "Edit", new { id = item.FreewayID }) |              
                @Html.ActionLink("Delete", "Delete", new { id = item.FreewayID })
            </div>
            
        </td>
    </tr>
}

</table>
