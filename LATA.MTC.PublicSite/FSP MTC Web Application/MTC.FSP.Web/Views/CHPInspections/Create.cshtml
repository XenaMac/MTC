@model MTC.FSP.Web.Models.CHPInspection

@{
    ViewBag.Title = "Create";
}
<link href="~/Content/themes/base/all.css" rel="stylesheet" />
<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Inspection</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Vehicle</label>
            <div class="col-md-10">
                @Html.DropDownList("FleetVehicleID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FleetVehicleID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Officer</label>
            <div class="col-md-10">
                @Html.DropDownList("CHPOfficerId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CHPOfficerId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Date</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.InspectionDate, new { htmlAttributes = new { @class = "form-control datepicker" } })
                @Html.ValidationMessageFor(model => model.InspectionDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Inspection Type</label>
            <div class="col-md-10">
                @Html.DropDownList("InspectionTypeID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.InspectionTypeID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Contractor</label>
            <div class="col-md-10">
                @Html.DropDownList("ContractorID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ContractorID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Notes</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.InspectionNotes, new { @class = "form-control", rows = "5" })
                @Html.ValidationMessageFor(model => model.InspectionNotes, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a href="~/CHPInspections/Index" class="btn btn-default">Cancel</a>
            </div>
        </div>
    </div>
}
@section scripts{

    <script>
        $(function () {

            $(".datepicker").datepicker();

        });
    </script>

}