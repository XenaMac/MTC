@{
    ViewBag.Title = "My Alarms";
}

<br />

<div ng-app="mtcApp">
    <div ng-controller="myAlarmsController" ng-cloak>

        <div class="row">
            <div class="col-sm-10 col-lg-offset-2">
                <h3>Select Alarms for which you would like email notification</h3>
                <br />
                <div class="checkbox" ng-repeat="a in alarms">
                    <label>
                        <input type="checkbox" ng-model="a.isSelected" /> {{a.alarmName}}
                    </label>
                </div>
                <br />
                <button ng-click="save()" class="btn btn-primary"><i class="fa fa-save" ng-hide="isBusy"></i><i class="fa fa-spinner fa-spin" ng-show="isBusy"></i> Save</button>
            </div>
        </div>

    </div>
</div>

@section scripts{

    @Scripts.Render("~/bundles/appAngular")
    <script src="~/app/controllers/myAlarmsController.js"></script>
    <script src="~/app/services/alarmSubscriptionService.js"></script>
}




